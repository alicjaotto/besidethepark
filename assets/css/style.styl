@import 'grid.styl'

// general

*
    font-family: "Open Sans"
    font-size: 10px
    line-height: 1.5
    box-sizing: border-box
    list-style-type: none
    margin: 0
    padding: 0
    border: 0
    vertical-align: baseline

.container
    width unit(full_width, '%')
    overflow hidden
    margin: 0 auto

.row::after
    content: ""
    clear: both
    display: table

.hidden
    display: none

//header
.header
    background-image: url('../img/header_mobile.png')
    background-position: center
    background-repeat: no-repeat
    width: 100%
    height: 350px
    position: relative
    margin-top: -20px

.navbar
    height: 80px
    background-color: rgba(255, 255, 255, 0.8)
    top: 0
    position: fixed
    width: 100vw

.navbar__logo
    font-size: 2.5em
    color: #5E9F3E
    display: inline-block
    line-height: 80px
    text-align: center
    margin-left: 40%

.navbar__menu
    float: right
    padding: 0 80px 0 0

.navbar__menu img
    width: 25px
    height: 25px
    margin: 25px 0 15px 40px
    float: right
    z-index: 1

// @keyframes intro
//   for i in 0..10
//     {10% * i}
//       opacity (i/10)

@keyframes intro {
  from {
    opacity: 0
  }
  to {
    opacity: 1
  }
}

.header__intro
    position: absolute
    top: 45%
    animation-name: intro
    animation-duration: 7s


.intro__text
    color: #ffffff

.intro__title
    color: #ffffff
    font-size: 2.5em

.intro__feature
    width: 55%
    height: auto
    margin-top: 25vw
    margin-left:35vw



a
    text-decoration: none
    cursor: pointer

p
    padding: 20 5 10 0

//about section

.about
    margin-top: 50px
    margin-bottom: 50px

.about__title
    font-weight: 300
    font-size: 2.5em

.about__text
    padding: 15px 25px 5px 0
    font-weight: 300


//offer section
.offer__box
    height: auto
    padding: 30px 30px 40px 30px

.offer__title
    color: #ffffff
    font-size: 2.5em
    font-weight: 300

.offer__text
    color: #ffffff
    margin-bottom: 15px
    margin-top: 15px

.offer__link
    color: #ffffff
    font-weight: bold

.offer--gray
    background-color: #434A40

.offer--green
    background-color: #314E23

.offer--blue
    background-color: #0E232D

.offer--lime
    background-color: #5E9F3E


//media queries

@media only screen and (min-width: 480px)
    *
        font-size: 14px

    h1, h2, h3, h4
        font-size: 35px

    img[class="hidden"]
        display: inline-block

    .header
        background-image: url('../img/header_web.png')
        width: 100vw
        max-width: 1800px
        height: 952px
        max-height: 952px

    .offer__box
        height: 220px
