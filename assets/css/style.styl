@import 'grid.styl'

// general

*
    font-family: "Open Sans"
    font-size: 14px
    box-sizing: border-box
    list-style-type: none
    margin: 0
    padding: 0
    border: 0
    vertical-align: baseline

.container
    width unit(full_width, '%')
    overflow hidden
    margin: 0 auto
    max-width: 1100px
    position: relative

.row::after
    content: ""
    clear: both
    display: table

.hidden
    display: none


//header
.header
    background-image: url('../img/header_mobile.jpg')
    background-position: center
    background-repeat: no-repeat
    background-size: cover
    width: 100%
    height: 350px
    position: relative
    margin-top: -20px

.navbar
    height: 80px
    background-color: rgba(255, 255, 255, 0.8)
    top: 0
    position: fixed
    width: 100%
    z-index: 1

.navbar__logo
    font-size: 2.5em
    color: #5E9F3E
    display: inline-block
    line-height: 80px
    text-align: center
    margin: auto
    width: 100%

.navbar__menu
    float: right

.navbar__menu img
    width: 25px
    height: 25px
    margin: 25px 0 15px 40px
    float: right
    z-index: 2

//animation
@keyframes intro {
  from {
    opacity: 0
  }
  to {
    opacity: 1
  }
}

.header__intro
    margin-top: 35%
    animation-name: intro
    animation-duration: 7s
    width: 70%


.intro__text
    color: #ffffff
    line-height: 1.2em
    margin-top: 15px


.intro__title
    color: #ffffff
    font-size: 2em
    line-height: 30px

.header__intro__feature
    background-image: url('../img/iphone.png');
    background-position: center
    background-repeat: no-repeat
    background-size: contain
    width: 260px
    height: 250px
    margin-top: -15%
    margin-left: 30%
    z-index: 1

a
    text-decoration: none
    cursor: pointer


//section "about"

.about
    margin-top: 50px
    margin-bottom: 50px

.about__title
    font-weight: 300
    font-size: 2em

.about__text
    padding: 15px 25px 5px 0
    font-weight: 300


//section "offer"
.offer__box
    height: auto
    padding: 30px 30px 40px 30px

.offer__title
    color: #ffffff
    font-size: 2em
    font-weight: 300

.offer__text
    color: #ffffff
    margin-bottom: 15px
    margin-top: 15px

.offer__link
    color: #ffffff
    font-weight: bold

.offer--gray
    background-color: #434A40

.offer--green
    background-color: #314E23

.offer--blue
    background-color: #0E232D

.offer--lime
    background-color: #5E9F3E


//media queries

@media only screen and (min-width: 480px)
    *
        font-size: 14px

    .about__title, .intro__title, .offer__title
        font-size: 2.5em

    img[class="hidden"]
        display: inline-block
        cursor: pointer

    .header
        background-image: url('../img/header_web.jpg')
        width: 100%
        height: 952px
        max-height: 952px

    .inline
        display: inline-block
        margin: auto
        width: inherit

    .navbar__logo
        display: inline

    #search_input
        margin: 25px 0 25px 0
        width: 180px
        height: 30px
        border: 1px solid gray
        background-color: rgba(255, 255, 255, 0)
        border-radius: 3px
        padding: 0 5px 0 5px

    .navbar__menu__list
        width: 100vw
        height: 100vh
        background-color: #0E232D
        opacity: 0.7

    .menu__list
        margin: 0 auto
        width: 100%


    .menu__list li
        width: 100%
        text-align: center
        padding-top: 20px


    .menu__list li a
        color #ffffff
        font-size 18px
        opacity: 1

    .menu__list li a:hover
        font-weight bold


    .menu__list li:first-child
        padding-top 35vh

    .header__intro
        width: 100%
        margin-top: 45%

    .header__intro__feature
        width: 750px
        height: 750px
        margin-top: -20%
        margin-left: 35%

    .offer__box
        height: 220px

@media (max-width: 1150px) and (min-width: 480px)

    .header__intro__feature
        display: none
