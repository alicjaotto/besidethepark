full_width = 80
columns = 12
gutter = 0

[class^="col_"]
  display inline-block
  float left
  margin-left unit(gutter, '%')
  margin-right unit(gutter, '%')

for col in 1..columns
  .col_{col}
    width unit((col / columns - gutter / 100 * 2) * 100, '%')

@media screen and (max-width: 480px)
  [class^="col_"]
    float none
    display block
    width 100%
    margin 0
